{
  "name": "event-api",
  "version": "1.0.0",
  "description": "API for database calls",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha -r ts-node/register -r source-map-support/register -r dotenv/config 'src/**/*.test.ts'",
    "build": "npm run generate && tsc --project tsconfig.build.json && npm run postbuild",
    "postbuild": "copyfiles -u 1 src/graphql-data/schemas/*.graphql dist",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "generate": "graphql-codegen",
    "start:dev": "npm run generate && npm run test && ts-node -r dotenv/config src/index.ts",
    "start": "node dist/index.js"
  },
  "author": "Jeppe Lind",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.2.7",
    "graphql-tools": "^6.2.2",
    "mongoose": "^5.10.5",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/passport": "^1.0.4",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/sinon": "^9.0.5",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.3.0",
    "dotenv": "^8.2.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0"
  }
}
